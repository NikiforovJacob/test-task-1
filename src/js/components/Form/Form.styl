@media (max-width 680px)
  .form__submit
    width 280px
    display flex
    flex-direction column
    align-items left
    margin 0px auto

  .form__submitBtn_Enable
    background-color #4CAF50
    border none
    font-family Arial
    color white
    text-decoration none
    font-size 16px
    height 40px
    width 131px
    padding 0px
    margin 0px 0px 10px 8px

  .form__submitBtn_Disable
    background-color #808080
    border none
    font-family Arial
    color white
    text-decoration none
    font-size 16px
    height 40px
    width 131px
    padding 0px
    margin 0px 0px 10px 8px

@media (min-width 680px)
  .form__submit
    width 100%
    display flex
    justify-content left
    align-items center
    height 40px

  .form__submitBtnBlock
    margin 0px 4px 0px 227px

  .form__submitBtn_Enable
    background-color #4CAF50
    border none
    font-family Arial
    color white
    text-decoration none
    font-size 16px
    height 40px
    width 131px
    padding 0px
    cursor pointer

  .form__submitBtn_Disable
    background-color #808080
    border none
    font-family Arial
    color white
    text-decoration none
    font-size 16px
    height 40px
    width 131px
    padding 0px
    cursor pointer

.form__submitBtn:focus 
  outline none

.form__hr
  margin 0px
  border none 
  background #E5E4E4
  height 1px

.form__lastChangeDateBlock
  margin-left 8px

.form__lastChangeDate
  font-family Arial
  font-size 12px
  line-height 20px
  color #999999
  margin auto 0px
